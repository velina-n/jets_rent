<h1 class='mt-3 text-center'>Mes r√©servations</h1>

<div class="container">
  <div class="row">
    <% @bookings.each do |booking| %>
      <div class="col-md-6 mb-4">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title"><%= booking.jet.model %></h5>
            <p class="card-text">
              <strong>Start Date:</strong> <%= booking.start_date.strftime("%d %B %Y") %><br>
              <strong>End Date:</strong> <%= booking.end_date.strftime("%d %B %Y") %><br>
              <strong>Price:</strong> <%= convert_to_euro(total_price(booking)) %><br>
              <strong>Status:</strong> <%= booking.status.capitalize %>
            </p>
            <a href="#" class="btn btn-primary">View Details</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
