<%# app/view/jets/new.html.erb %>
<div class="container mt-5">
  <h1 class="text-center">Ajouter un Nouveau Jet</h1>
  <p class="text-muted text-center">Renseignez les détails pour ajouter un jet à votre flotte</p>

  <%= form_with model: @jet, local: true, class: "needs-validation" do |f| %>
    <div class="mb-3">
      <%= f.label :model, "Modèle du Jet", class: "form-label" %>
      <%= f.text_field :model, class: "form-control", placeholder: "Ex. : Gulfstream G650", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :price, "Prix par jour ($)", class: "form-label" %>
      <%= f.number_field :price, class: "form-control", placeholder: "Ex. : 5000", required: true %>
    </div>

    <div class="mb-3 form-check">
      <%= f.check_box :available, class: "form-check-input", id: "available" %>
      <%= f.label :available, "Disponible pour la location", class: "form-check-label" %>
    </div>

    <div class="mb-3">
      <%= f.label :capacity, "Capacité Max (passagers)", class: "form-label" %>
      <%= f.number_field :capacity, class: "form-control", placeholder: "Ex. : 12", required: true %>
    </div>

    <div class="text-center">
      <%= f.submit 'Créer le Jet', class: 'btn btn-primary btn-lg' %>
    </div>
  <% end %>

  <div class="text-center mt-3">
    <%= link_to 'Retour à la Liste des Jets', jets_path, class: 'btn btn-secondary' %>
  </div>
</div>
