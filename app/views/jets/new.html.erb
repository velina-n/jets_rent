<h1>New Jet</h1>

<%= form_with model: @jet, local: true do |f| %>
  <div>
    <%= f.label :model %>
    <%= f.text_field :model, required: true %>
  </div>

  <div>
    <%= f.label :price %>
    <%= f.number_field :price, required: true %>
  </div>

  <div>
    <%= f.label :available %>
    <%= f.check_box :available %>
  </div>

  <div>
    <%= f.label :capacity %>
    <%= f.number_field :capacity, required: true %>
  </div>

  <div>
    <%= f.submit 'Create Jet', class: 'btn btn-success' %>
  </div>
<% end %>

<%= link_to 'Back to Jets', jets_path, class: 'btn btn-secondary' %>
