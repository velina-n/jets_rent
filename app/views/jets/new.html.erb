<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <!-- Carte pour le formulaire -->
      <div class="card shadow-lg border-0">
        <div class="card-header bg-dark text-white text-center">
          <h2>Créer un nouveau jet</h2>
        </div>
        <div class="card-body">
          <%= simple_form_for(@jet, html: { class: "needs-validation", novalidate: true }) do |f| %>
            <!-- Champ pour le modèle -->
            <div class="mb-3">
              <%= f.input :model, label: "Modèle du jet", input_html: { class: "form-control", placeholder: "Ex: Falcon 900" } %>
            </div>

            <!-- Champ pour le prix -->
            <div class="mb-3">
              <%= f.input :price, label: "Prix par jour (€)", input_html: { class: "form-control", placeholder: "Ex: 5000" } %>
            </div>

            <!-- Champ pour la capacité -->
            <div class="mb-3">
              <%= f.input :capacity, label: "Capacité (nombre de passagers)", input_html: { class: "form-control", placeholder: "Ex: 12" } %>
            </div>

            <!-- Champ pour la disponibilité -->
            <div class="form-check form-switch mb-3">
              <%= f.input :available, as: :boolean, label: "Disponible ?", input_html: { class: "form-check-input" }, wrapper_html: { class: "form-check" } %>
            </div>

            <!-- Champ pour les images -->
            <div class="mb-3">
              <%= f.input :images, as: :file, label: "Images", input_html: { multiple: true, class: "form-control" } %>
            </div>

            <!-- Bouton d'envoi -->
            <div class="d-grid gap-2 mt-4">
              <%= f.submit "Créer le jet", class: "btn btn-secondary btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
