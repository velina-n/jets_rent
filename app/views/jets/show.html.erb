<div class="jet-details container mt-5">
  <h1 class="jet-title text-center mb-4">Détails du Jet</h1>

  <div class="row">
    <!-- Section gauche : Image -->

    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
        <%=  image_tag @jet.image ,class:"d-block w-100" %>
    </div>
    <div class="carousel-item">
        <%=  image_tag @jet.image ,class:"d-block w-100" %>
    </div>
    <div class="carousel-item">
        <%=  image_tag @jet.image ,class:"d-block w-100" %>
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>

    <!-- Section centre : Informations -->
    <div class="col-md-4 d-flex flex-column justify-content-center">
      <h2 class="jet-model"><%= @jet.model %></h2>
      <p class="jet-price">
        <strong>Prix par jour  </strong><%= convert_to_euro(@jet.price) %>
      </p>
      <p class="jet-availability">
        <strong>Disponibilité  </strong><%= @jet.available ? 'Disponible' : 'Non disponible' %>
      </p>
      <p class="jet-capacity">
        <strong>Capacité  </strong><%= @jet.capacity %> passagers
      </p>

      <!-- Boutons d'action -->
      <div class="action-buttons mt-4">
        <%= link_to 'Retour à la liste', jets_path, class: 'btn btn-jet-secondary mb-2' %>
      </div>
    </div>

    <!-- Section droite : Formulaire -->
    <div class="col-md-4">
      <div class="reservation-form">
        <h2 class="text-center">Créer une réservation</h2>
        <%= render 'bookings/form', jet: @jet, booking: Booking.new %>
      </div>
    </div>
  </div>
</div>
